69

PageView.builder = PageView + loop

class TestState extends State<Test> with SingleTickerProviderStateMixin {

  PageController pc ;
  void initState(){
    pc = new PageController(
      initialPage:4,// رقم صفحة البدأ
      viewportFraction: 0.8 , // مقدار مساحة اظهور
    );
    super.initState();
  }

  List image = [
    {"ur1":"images/2.jpg"},
    {"ur1":"images/3.jpg"},
    {"ur1":"images/4.jpg"},
    {"ur1":"images/5.jpg"},
    {"ur1":"images/6.jpg"},
    {"ur1":"images/7.jpg"},
    {"ur1":"images/8.jpg"},
    {"ur1":"images/9.jpg"},
    {"ur1":"images/10.jpg"},
    {"ur1":"images/11.jpg"},
  ];

  Widget build(BuildContext context) {
    return Scaffold(
        appBar: AppBar( ),
      body:Column(
        children: [
          Container(padding: EdgeInsets.symmetric(vertical: 10),
            height: 450,
            child:PageView.builder(
              controller: pc,
              // scrollDirection: Axis.vertical,// جعل الاتجاه عامودي
              // reverse: true, //تغير الاتجاه بالعكس
              onPageChanged: (index){print(index);},
              itemCount: image.length,
              itemBuilder: (context, i) {
                return Image.asset(image[i]["ur1"],fit: BoxFit.fill,);
              },
            ),
          ),

          ElevatedButton(onPressed: (){
            // pc.jumpToPage(2); // انتقال سريع
            pc.animateToPage(4, // هنا انتقال ولكن مع حركة هذا رقم الصفحة
                duration: Duration(milliseconds: 500),
                curve: Curves.easeIn // سنأتي عليها
            );
          }, child: Text("Go to HomePage"))
        ],
      ) ,
    );
  }
}



