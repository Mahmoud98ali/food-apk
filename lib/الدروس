Center(              //                     هذه AlertDialog رسالة تظهر عند الضغط ع زر ما
          child: ElevatedButton(

            onPressed: (){
              showDialog(context: context, builder: (context){
                 return AlertDialog(
                   title: Text("إنا لله وإنا إليه راجعووون",textDirection: TextDirection.rtl,textAlign: TextAlign.right,),
                   // title: Icon(Icons.arrow_downward_rounded,color: Colors.white,),
                   content: Text(" ياعبدالله اتق الله وخافه",textDirection: TextDirection.rtl,textAlign: TextAlign.right),
                   backgroundColor: Colors.black,
                   titleTextStyle: TextStyle(color: Colors.white,fontSize: 30), // اذا كان في خط بتتحكم فيه ممكن من هون هي للعنوان
                   contentTextStyle: TextStyle(color: Colors.white,fontSize: 20), // ايضا تحكم بخواص محتوى النص
                   titlePadding: EdgeInsets.all(20), // حواف العنوان
                   contentPadding: EdgeInsets.all(20), // حواف النص الداخلي
                   // الحداث التي تنعرض بداخل الزر
                    actions: [

                      FlatButton(onPressed: (){print("حسنا");}, child: Text("حسناً")),
                      FlatButton(onPressed: (){
                        Navigator.of(context).pop(); // مو مهم حاليا نفهمه ولكن هاد بلغي ال Alin عند الضغط
                        print("إغلاق");}, child: Text("إغلاق"))
                    ],

                 );

              });
            },
          child: Text("آه من ذنوبي"),
          ),
        )


