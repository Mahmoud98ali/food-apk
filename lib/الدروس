76

class TestState extends State<Test> with SingleTickerProviderStateMixin {

  var username;
  var phone ;

GlobalKey<FormState> formState = new GlobalKey<FormState>();

// send داخل ال om pressed
send (){
  var form = formState.currentState ;
  if(form.validate()){
    form.save(); //عشان تخزن(تحفظ) القيم الي منكتبها بالحقل بالمتغيرات
    print("username = $username");
    print("phone = $phone");
  }else{print("خطأ");}
}
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(),
      body: Column(
       children: [
         //حقول الإدخال
         Container(
           padding: EdgeInsets.all( 10),
           child: Form( // لابد من ال Form and Key من اجل التحكم بالحقل او اي ويدجت
             autovalidateMode:AutovalidateMode.always, //هي لجعل الرسالة تنبثق من دون الضغط على الزر ومن الممكن ان نضعها ضمن ل حقل على حدا
             key: formState,
             child: Column(
               children: [
                 TextFormField(
                   onSaved: (text){
                     username = text;
                   },
        // validator يعني تحقق;
                   validator:(text) {
                     if (text.length<4){
                       return("لايمكن للحرف أن يكون أصغر من 4");
                     }
                     if (text.length>10){
                      return ("لايمكن للحرف أن يكون أكبر من 10");
                     }
                  return null ;
                   },
                 ),

                 TextFormField(
                   onSaved: (text){
                     phone = text;
                   },
                   // validator يعني تحقق;
                   validator:(text) {
                     if (text.length<4){
                       return("لايمكن عدد الارقام اقل من 4");
                     }
                     if (text.length>10){
                       return ("لايمكن عدد الارقام أكبر من 10");
                     }
                     return null ;
                   },
                 ),

               ],
             ),
           )    ),
          ElevatedButton(onPressed: send , child: Text("Send"))

       ],
      )
    );
  }
}


