class TestState extends State<Test>{
  List student = [
    {"الاسم":"محمد","الحفظ":"أتم الجزء العاشر","الصف":"الصف : رابع"},
    {"الاسم":"سليم","الحفظ":"أتم الجزء الثاني","الصف":"الصف : السادس"},
    {"الاسم":"طاهر","الحفظ":"أتم الجزء الخامس","الصف":"الصف : خامس"},
    {"الاسم":"مجد","الحفظ":"أتم الجزء السابع","الصف":"الصف : عاشر"},
    {"الاسم":"أغيد","الحفظ":"أتم الجزء الثاني","الصف":"الصف : ثاني"},
    {"الاسم":"محمد","الحفظ":"أتم الجزء العاشر","الصف":"الصف : رابع"},
    {"الاسم":"سليم","الحفظ":"أتم الجزء الثاني","الصف":"الصف : السادس"},
    {"الاسم":"طاهر","الحفظ":"أتم الجزء الخامس","الصف":"الصف : خامس"},
    {"الاسم":"مجد","الحفظ":"أتم الجزء السابع","الصف":"الصف : عاشر"},
    {"الاسم":"أغيد","الحفظ":"أتم الجزء الثاني","الصف":"الصف : ثاني"},

  ];

  Widget build(BuildContext context){

      return Scaffold(

        appBar: AppBar(),
        drawer: Drawer(),
        body: GridView.builder(    // نفس تماما ListView ولكن الفرق اني استطيع جعل السطر فيه أكثر من عنصر يعني بدل ال Row مثلا
            itemCount: student.length,
            gridDelegate: SliverGridDelegateWithFixedCrossAxisCount(

              crossAxisCount: 2, // عدد العناصر في السطر أو العمود حسب نوع ال GridView
             // من اجل التباعد بين العناصر وممكن ايضا استخدم كونتينار وبادينغ
              crossAxisSpacing: 10,
              mainAxisSpacing: 5 ,
            //

            ),

            itemBuilder: (context,i){
              return Container(
                // margin: EdgeInsets.all(10),
                color: Colors.green,
                child: ListTile(

                  title:Text("${student[i]["الاسم"]}",style: TextStyle(fontSize: 30),),
                  trailing:Text("${student[i]["الحفظ"]}"),
                  subtitle:Text("${student[i]["الصف"]}"),
                ),
              );

            }

        )
      );
  }

