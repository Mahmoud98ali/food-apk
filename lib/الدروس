TextFormField part 3

class TestState extends State<Test> with SingleTickerProviderStateMixin {


  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(),
      body: Column(
       children: [
         //حقول الإدخال
         Container(
           padding: EdgeInsets.all( 10),
           child: TextFormField(
             cursorColor: Colors.red,
             cursorWidth:4 ,
             cursorHeight: 30,
              maxLength:40 , // العدد الأقصى للأحرف المسموح بكتابتها
               // minLines: 1, // هيك الأفضل استخدام الماكس ول مين سوا
              // maxLines: 2, // عدد الأسطر
                obscureText: true , // هي تستخدم لكلمات المرور متل التشفير
               keyboardType: TextInputType.number, // نوع الكيبورد ممكن نخليه ارقام أو للإيميل أو لكتابة تاريخ او أي شيء
             // initialValue: "100", //قيمة ابتدائية
             decoration: InputDecoration(
               icon: Icon(Icons.ac_unit), // TextFormField في خارح
               prefixIcon: Icon(Icons.ac_unit), // بداية TextFormField
               suffixIcon: Icon(Icons.ac_unit), // في آخر TextFormField


             )
           ),
         )
       ],
      )
    );
  }
}


