class TestState extends State<Test> with SingleTickerProviderStateMixin {

  PageController pc ;
  void initState(){
    pc = new PageController(
      initialPage:4,// رقم صفحة البدأ
      viewportFraction: 0.8 , // مقدار مساحة اظهور
    );
    super.initState();
  }

  Widget build(BuildContext context) {
    return Scaffold(
        appBar: AppBar( ),
      body:Column(
        children: [
          Container(padding: EdgeInsets.symmetric(vertical: 10),
            height: 450,
            child:PageView(
              controller: pc,
              // scrollDirection: Axis.vertical,// جعل الاتجاه عامودي
              // reverse: true, //تغير الاتجاه بالعكس
              onPageChanged: (index){print(index);},
              children: [
              Image.asset("images/2.jpg",fit: BoxFit.fill,),
              Image.asset("images/3.jpg",fit: BoxFit.fill,),
              Image.asset("images/4.jpg",fit: BoxFit.fill,),
              Image.asset("images/5.jpg",fit: BoxFit.fill,),
              Image.asset("images/6.jpg",fit: BoxFit.fill,),
              Image.asset("images/7.jpg",fit: BoxFit.fill,),
              Image.asset("images/8.jpg",fit: BoxFit.fill,),
              Image.asset("images/9.jpg",fit: BoxFit.fill,),
              Image.asset("images/10.jpg",fit: BoxFit.fill,),
              Image.asset("images/11.jpg",fit: BoxFit.fill,),
            ],),
          ),
        ],
      ) ,
    );
  }
}



