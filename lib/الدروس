showModalBottomSheet الشاشة التي تظهر من الأسفل

class Test extends StatefulWidget {
  State<StatefulWidget> createState() {
    return TestState();
  }
}

class TestState extends State<Test> with SingleTickerProviderStateMixin {




  Widget build(BuildContext context) {
    return Scaffold(
        appBar: AppBar(title: Text("Page Test"),),
        body: Center(
          child: ElevatedButton(
            child: Text("أضغط لإظهار الشاشة السفلى"),
            onPressed:(){
             showModalBottomSheet(context: context,
                 builder: (context) => Container(
                   child: Center(
                       child: Text("الشاشة المُظهرة",
                         style: TextStyle(fontSize: 50),
                       )
                   ),
                   height: 200,color: Colors.green,
                 )
              );
            } ,
          ),
        )
    );
  }
}



