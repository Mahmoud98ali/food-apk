81

class TestState extends State<Test> with SingleTickerProviderStateMixin {

    ScrollController  sc ;

    Void initState (){
      sc = new ScrollController();
      sc.addListener(() {
        print(sc.offset);
        print("Max pixel = ${sc.position.maxScrollExtent}");
        print("Min pixel = ${sc.position.minScrollExtent}");
      });
     super.initState();
    }
  Widget build(BuildContext context) {
    return Scaffold(
        appBar: AppBar(title: Text("Page Test"),),
        body: ListView(
          controller: sc ,
          children: [
            ElevatedButton(onPressed: (){
              sc.jumpTo(sc.position.maxScrollExtent);
            }, child: Text("Jump to bottom")),
            ...List.generate(20, (index) => Container(
              margin: EdgeInsets.all(10),
              child: Text("Container $index"),
              height: 100,
              color: index.isEven ? Colors.red : Colors.green,
              width: double.infinity,

            )),
            ElevatedButton(onPressed: (){
              sc.animateTo(100, duration: Duration(seconds: 2), curve:Curves.easeIn); // استخدمنا ال animate مشان الانتقال الناعم
            }, child: Text("Jump to Top")),
          ],
        )
    );
  }
}

81
.................................................................................
80
 درس ال Slider الشريط متغير القيمة


class TestState extends State<Test> with SingleTickerProviderStateMixin {

  var valueslider =0.0 ; //  لأنه لازم تكون double
  Widget build(BuildContext context) {
    return Scaffold(
        appBar: AppBar(title: Text("Page Test"),),
        body: Column(
         children: [
          Slider(
              min: 0, // ادنى قيمة
              max: 100,// اعلى قيمة
              activeColor: Colors.green, // لون الشريط الفعال
              inactiveColor: Colors.red, // لون الشريط الغيرالفعال
              value: valueslider, // متغير من أجل تحديد موقع دائرة ال slider
              onChanged: (val){
                setState(() {
                  valueslider =val ;
                  print(valueslider);
                });
          })
         ],
        )
    );
  }
}




80
.................................................................................
79

Navigator 3
بهاد الدرس فكرة
Navigator.of(context).pushReplacementNamed("one");
هي يعني pushReplacementNamed الانتقال لصفحة ما بس بدون الرجوع اليها يعني بنحذف الروت
هي الخاصية حلوة اذا كانت بعد صفحة تسجيل دخول بحيث اذا سجل دخول مابقدر يرجع الا بتسجيل خروج
من الممكن الرجوع للصفحة بس مو عن طريق ال pop بس عن طريق push يعني انتقال عادي وليس رجوع


79
.................................................................................
78
بالدرس هاد هو طريقة الرجوع للصفحة رح من خلال تعليمة
Navigator.of(context).pop();
وفي عنا تعليمة بترجع true اذا بقدر ارجع وصفحة وبترجع false اذا مابقدر وهي
Navigator.of(context).canPop()
ومابقدر ارجع لما كون بالصفحة البدائية الرئيسية يعني الي مادخلت لسا على ولا صفحة

رح اكتفي بعرض صفحة one page


class One extends StatefulWidget {
  const One({key}) : super(key: key);
  @override
  _oneState createState() => _oneState();
}

class _oneState extends State<One> {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text("one page"),),
      body: Column(
        children: [
          ElevatedButton(onPressed: (){
            if(Navigator.of(context).canPop()){
            Navigator.of(context).pop();}
          },
              child: Text("Back"))
        ],
      ),

    );
  }
}



