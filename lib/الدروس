51


class TestState extends State<Test>{

     // هذه الرسالة التي تظهر عند الضغط على الزر تدعى SnackBar

  GlobalKey<ScaffoldState> scaffoldkey = new GlobalKey<ScaffoldState>(); // هي من اجل تفعيل ال key وهي مفتاح لميزات كل ويدجت
  Widget build(BuildContext context){
    return Scaffold(
        key: scaffoldkey, // هلأ منوصل لخواص ال scaffold من خلال هاد المفتاح

      appBar: AppBar(),
      drawer: Drawer(),
      body:  Center(
        child: ElevatedButton(

          onPressed: (){
            var snackbar = SnackBar(
              action: SnackBarAction( // خاصية مهمة زر يظهر لإغلاق الرسالة بالضفط عليه مهما كانت مدة الرسالة
                label: "إغلاق الرسالة",
                textColor: Colors.white,
                onPressed: (){
                  print("اغلاق الرسالة ");
                },
              ),
              // تظهر عند الضغط على الزر
              onVisible: (){
                print("تظهر عند الضغط على الزر ");
              },
              behavior: SnackBarBehavior.floating,
              content: Text("اتق الله",style: TextStyle(fontSize: 20),textAlign: TextAlign.center,),
              duration: Duration(seconds: 5), // مدة الظهور ممكن التحكم بها كيف تشاء
              padding: EdgeInsets.all(10),
              margin: EdgeInsets.all(100), // behavior: SnackBarBehavior.floating,هذه لاتفعل فورا بدون
            );
            scaffoldkey.currentState.showSnackBar(snackbar);
          },
          child: Text("أظهر رسالة"),
        ),
      )
    );



