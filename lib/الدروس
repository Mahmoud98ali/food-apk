                groupValue: a ,
                onChanged: (val){
                  setState(() {
                    a = val ;
                  });
                }),

            RadioListTile(
                controlAffinity: ListTileControlAffinity.trailing, // تبديل بين الأيقونة وزر الضغك
                selected: a == "قيم2 " ? true : false , // شرط مشان نغير لون كامل
                activeColor: Colors.red , // هذا اللون الذي يحدث إذا تحقق الشرط
                secondary: Icon(Icons.star,color: Colors.amber,), // تعليمة لإضافة ايقونة
                title: Text("20"),
                subtitle: Text("20 Points = 200 SY"),
                value: "قيم2 ",
                groupValue: a ,
                onChanged: (val){
                  setState(() {
                    a = val ;
                  });
