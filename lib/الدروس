class TestState extends State<Test> {
  Widget build(BuildContext context) {
    return DefaultTabController(   //  من اجل أن نستطيع سحب الشاشة بويدجت كامل واضافة ويدجات عدة  DefaultTabController
        length: 2 ,  // عدد الويدجت الرئيسي الأب يعني عدد الصفحات المسموح اضافتها
        child: Scaffold(
        appBar: AppBar(),
        drawer: Drawer(),
        body: TabBarView(  // TabBarView  هذه  ويجدت السحب الشاشة

          children: [
            Container(width: double.infinity, child: Text("Mahmoud"),color: Colors.deepPurple,),
            Container(width: double.infinity, child: Text("AL-ALi"),color: Colors.green,),
          ],
        )
    )
    );
  }
}


