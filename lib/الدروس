             // readOnly: true, // تفيد في جعل المربع فقط للقراءة
             // initialValue: "read only ^_^ ",
             // style: TextStyle(color: Colors.red), // To control in the text in field
             // textInputAction: TextInputAction.newline, // To control in button the input text زر الإدخال
            controller: user,
           ),
         ),
         ElevatedButton(
           child: Text("أضغط"),
           onPressed: (){
             print(user.text);
           },
         )
       ],
      )
    );
  }
