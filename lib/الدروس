class TestState extends State<Test>{

  GlobalKey<ScaffoldState> scaffoldkey = new GlobalKey<ScaffoldState>();

  Widget build(BuildContext context){

    return Scaffold(
        key: scaffoldkey,
        appBar: AppBar(
          title: Text("الصفحة الرئيسية",textAlign: TextAlign.center,textDirection: TextDirection.rtl,),

          leading: IconButton(icon: Icon(Icons.arrow_back),onPressed: (){},),  //  Drawer انتبه اذا استخدمت هذه ستحذف ايقونة ال
          actions: [
            IconButton(icon: Icon(Icons.title), onPressed: (){}),
            IconButton(icon: Icon(Icons.add), onPressed: (){}),

          ],
          brightness: Brightness.dark, // لون عناصر الموجودين فوق ال AppBar
          shadowColor: Colors.green,
          centerTitle: true,
          elevation: 20, backgroundColor: Colors.deepPurple,
        ),
        drawerScrimColor: Colors.deepPurple.withOpacity(0.5), // هي الشاشة اسمها ويزأوبستي
        endDrawer: Drawer(

        ), // اذا  بدي خليها من اليمين
        drawer: Drawer(
          child: Column(
            children: [
              UserAccountsDrawerHeader( // هذه الخاصية جاهزة للإيميل
                currentAccountPicture: CircleAvatar(backgroundColor: Colors.deepPurple,child: Text("M"),),
                accountName: Text("Mahmoud AL-ALi"),
                accountEmail: Text("mahmoudad2013@hotmail.com"),
                arrowColor: Colors.red,
              ),
              ListTile( title: Text("Home Page"), leading: Icon(Icons.home),onTap: (){},),
              ListTile( title: Text("About"), leading: Icon(Icons.help_outline),onTap: (){},),
              ListTile( title: Text("Help"), leading: Icon(Icons.live_help_outlined),onTap: (){},),
              ListTile( title: Text("Logout"), leading: Icon(Icons.logout),onTap: (){},),

            ],
          ),
        ),

        body:  Center(
          child: Container(
              padding: EdgeInsets.only(top: 200),
              child: Column(
                children: [
                  IconButton(icon: Icon(Icons.arrow_back,size: 30,),
                    onPressed: (){
                      scaffoldkey.currentState.openDrawer();
                    },
                    color: Colors.deepPurple,

                  ),
                  IconButton(icon: Icon(Icons.arrow_forward_outlined,size: 30,),
                    onPressed: (){
                      scaffoldkey.currentState.openEndDrawer();
                    },
                    color: Colors.deepPurple,

                  ),
                ],
              )
          ),
        )
    );
  }
}




