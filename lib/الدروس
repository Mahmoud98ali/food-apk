74
TextFormField part 5

class TestState extends State<Test> with SingleTickerProviderStateMixin {

var value ;

  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(),
      body: Column(
       children: [
         //حقول الإدخال
         Container(
           padding: EdgeInsets.all( 10),
           child: TextFormField(
             // onTap: (){print("عند الضغط على الحقل");},
             // هذا التابع onChanged عند اضافة اي حرف او رقم للحفل يتفعل
              onChanged:(text){
                setState(() {
                  value = text ;
                });
              } ,
             // onEditingComplete تستخدم عند الانتهاء من الكتابة والضغط انتر
             onEditingComplete: (){
                print("complete");
             },
           )    ),
          Text("value : $value")

       ],
      )
    );
  }
}


