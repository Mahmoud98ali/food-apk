       children: [
         //حقول الإدخال
         Container(
           padding: EdgeInsets.all( 10),
           child: TextFormField(
             decoration: InputDecoration(
                enabled: true , //  enabledBorder هذه الحال تكون متوقفة يعني لما تكون false بتتفعل خواص disabledBorder ولما تكون true بتتفعل خواص
               //  enabledBorder: UnderlineInputBorder(borderSide: BorderSide(color: Colors.green,width:4 ),) // الخ كلها أشكال الخط.. out و under ال
              disabledBorder: OutlineInputBorder(borderSide: BorderSide(color: Colors.black87,width:4 ),borderRadius: BorderRadius.circular(20)),
               enabledBorder: OutlineInputBorder(borderSide: BorderSide(color: Colors.green,width:4 ),borderRadius: BorderRadius.circular(20)),
               focusedBorder: OutlineInputBorder(borderSide: BorderSide(color: Colors.deepPurple,width:4 ),borderRadius: BorderRadius.circular(20)),
                // فكرة border انها عند استخدامها أي شيء نغيره بها ينطبق ع كل الحالات
                // border: OutlineInputBorder(borderSide: BorderSide(color: Colors.amber))
             )
           ),
         )
       ],
      )
    );
  }
}




