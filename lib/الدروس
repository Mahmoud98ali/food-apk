67

 bottomNavigationBar

class TestState extends State<Test> with SingleTickerProviderStateMixin {


  int selectedIndex = 0;
  List<Widget> listWidegt =[
    Text("صفحة 1"),
    Container(
          width: double.infinity,
          child: Text("Mahmoud",style: TextStyle(fontSize: 40),),
          color: Colors.deepPurple,
        ),
    page()
  ];
  Widget build(BuildContext context) {
    return Scaffold(
        appBar: AppBar( ),
        bottomNavigationBar: BottomNavigationBar(
          iconSize: 30,
          selectedItemColor: Colors.white, // التحكم بلون الخيار الفعال
          selectedLabelStyle: TextStyle(
              fontSize: 24,
              fontWeight: FontWeight.bold), // التحكم بخط الخيار الفعال
          unselectedItemColor: Colors.black, // التحكم بلون الخيار غير الفعال
          currentIndex: selectedIndex, // هذه تحدد الخيار المفعل
          // selectedFontSize: 40, ممكن اتحكم مباشرة بالخط
          onTap: (index) {
            setState(() {
              selectedIndex =
                  index; //أصبح يعفل المسند selectedIndex الى  index عندما أسندنا ال
            });
          },
          backgroundColor: Colors.amber,

          items: [
            BottomNavigationBarItem(
                label: "الصفحة الرئيسة",
                icon: Icon(Icons.access_time_outlined)),
            BottomNavigationBarItem(
              label: "روابط هامة ",
              icon: Icon(Icons.account_box),
            ),
            BottomNavigationBarItem(
              label: "page",
              icon: Icon(Icons.pages),
            ),
          ],
        ),
        drawer: Drawer(),
        body: listWidegt.elementAt(selectedIndex)

    );
  }
}



