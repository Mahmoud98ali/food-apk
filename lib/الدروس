65
    هذه TabBar من اجل صناعة خيارات على AppBar بناءً على الدرس السابق

class TestState extends State<Test> {
  Widget build(BuildContext context) {
    return DefaultTabController(   //  من اجل أن نستطيع سحب الشاشة بويدجت كامل واضافة ويدجات عدة  DefaultTabController
        length: 6 ,  // عدد الويدجت الرئيسي الأب يعني عدد الصفحات المسموح اضافتها
        child: Scaffold(
        appBar: AppBar(

            title: Text("الصفحة الرئيسية للشيخ"),
            bottom: TabBar(
              isScrollable: true,  // هذه من اجل امكانية سحب الويدجات ان كانو كثار
              physics: BouncingScrollPhysics(),
              indicatorColor: Colors.black, // الخط الموجود تحت الخيار ممكن التحكم بكل شيء يخصه
              onTap: (index){print(index);}, // عنوان للخيارات
              tabs: [
                Tab(child: Text("الدروس العلمية"),
                icon: Icon(Icons.do_disturb_off_sharp),),
                Tab(child: Text("خطب يوم الجمعة"),
                  icon: Icon(Icons.accessibility_new_sharp),),
                Tab(child: Text("الرحلات"),
                  icon: Icon(Icons.zoom_out_outlined,)),
                Tab(child: Text("الكتب"),
                  icon: Icon(Icons.ac_unit),),
                Tab(child: Text("الصفحات الرسمية"),
                  icon: Icon(Icons.print),),
              Tab(child: Text("المناظرات"),
                icon: Icon(Icons.home),),
            ],
            ),
        ),
        drawer: Drawer(),
        body: TabBarView(  // TabBarView هذه  ويجدت السحب

          children: [
            Container(width: double.infinity, child: Text("Mahmoud"),color: Colors.deepPurple,),
            Container(width: double.infinity, child: Text("AL-ALi"),color: Colors.green,),
            Container(width: double.infinity, child: Text("Mahmoud"),color: Colors.deepPurple,),
            Container(width: double.infinity, child: Text("AL-ALi"),color: Colors.green,),
            Container(width: double.infinity, child: Text("Mahmoud"),color: Colors.deepPurple,),
            Container(width: double.infinity, child: Text("AL-ALi"),color: Colors.green,),
          ],
        )
    )
    );
  }
