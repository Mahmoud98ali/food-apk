// 43         Checkbox
 Container(
         alignment: Alignment.center,
         padding: EdgeInsets.all(10),
         child: Column(
           children: [
             Text("أجزاء القرآن الكريم",style: TextStyle(fontSize: 30),),

             Row(

               children: [
                 Text("الجزء الأول"),
               // مهمتها الرئيسية تغير القيمة وتحتاج الى متغير من نوع bool
               Checkbox(

                 activeColor: Colors.red, // لون الخيار
                  checkColor: Colors.black, // لون الأيقونة
                  focusColor: Colors.blue,
                   value: a , // القيمة المسندة
                   onChanged: (val)  // نعرف متغير باسم ما نغير به القيمة ونأسندها للمتغير الأساسي الذ هو هنا a
                   {
                setState(()  // من أجل إظهار التفاعل على الشاشة
                {
                  print(a); // قبل الإسناد
                  a = val ;
                  print(val); // بعد الإسناد
                });
                   }
               )],
             ),


             Row(

               children: [
                 Text("الجزء الثاني"),
                 // مهمتها الرئيسية تغير القيمة وتحتاج الى متغير من نوع bool
                 Checkbox(
                     value: b,
                     onChanged: (val){
                       setState(() {
                         print(val); // قبل الإسناد
                         b = val ;
                         print(val); // بعد الإسناد
                       });
                     }
                 )],
             ),


             Row(

               children: [
                 Text("الجزء الثالث"),
                 // مهمتها الرئيسية تغير القيمة وتحتاج الى متغير من نوع bool
                 Checkbox(
                     value: c ,
                     onChanged: (val){
                       setState(() {
                         print(val); // قبل الإسناد
                         c = val ;
                         print(val); // بعد الإسناد
                       });
                     }
                 )],
             ),


             Row(

               children: [
                 Text("الجزء الرابع"),
                 // مهمتها الرئيسية تغير القيمة وتحتاج الى متغير من نوع bool
                 Checkbox(
                     value: d ,
                     onChanged: (val){
                       setState(() {
                         print(val); // قبل الإسناد
                         d = val ;
                         print(val); // بعد الإسناد
                       });
                     }
                 )],
             ),


             Row(

               children: [
                 Text("الجزء الخامس"),
                 // مهمتها الرئيسية تغير القيمة وتحتاج الى متغير من نوع bool
                 Checkbox(
                     value: e ,
                     onChanged: (val){
                       setState(() {
                         print(val); // قبل الإسناد
                         e = val ;
                         print(val); // بعد الإسناد
                       });
                     }
                 )],
             ),

           ],
         ),
       )

