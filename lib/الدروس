 List student = [
    {"الاسم":"محمد","الحفظ":"أتم الجزء العاشر","الصف":"الصف : رابع"},
    {"الاسم":"سليم","الحفظ":"أتم الجزء الثاني","الصف":"الصف : السادس"},
    {"الاسم":"طاهر","الحفظ":"أتم الجزء الخامس","الصف":"الصف : خامس"},
    {"الاسم":"مجد","الحفظ":"أتم الجزء السابع","الصف":"الصف : عاشر"},
    {"الاسم":"أغيد","الحفظ":"أتم الجزء الثاني","الصف":"الصف : ثاني"},
    {"الاسم":"محمد","الحفظ":"أتم الجزء العاشر","الصف":"الصف : رابع"},
    {"الاسم":"سليم","الحفظ":"أتم الجزء الثاني","الصف":"الصف : السادس"},
    {"الاسم":"طاهر","الحفظ":"أتم الجزء الخامس","الصف":"الصف : خامس"},
    {"الاسم":"مجد","الحفظ":"أتم الجزء السابع","الصف":"الصف : عاشر"},
    {"الاسم":"أغيد","الحفظ":"أتم الجزء الثاني","الصف":"الصف : ثاني"},

  ];

  Widget build(BuildContext context){

      return Scaffold(

        appBar: AppBar(),
        drawer: Drawer(),
        body: ListView.separated(  //  نفس تمام builder ولكن فيها خاصية جديدة لتوليد فواصل بين عناصر اللائحة
            separatorBuilder: // هي الإضافة عن builder وهي هامة للفصل بين العناصر
                (context,index){
              return Divider // هي ممكن نغيرها كيف مابدنا لأن ويدجت فممكن حط زر او  cuolmun او row او اي شي
                (color: Colors.black,height: 2,thickness: 2 ,);
            },
            physics: BouncingScrollPhysics(),
            // padding: EdgeInsets.all(10),
            itemCount: student.length , // عدد التكرار المطلوب
            itemBuilder: (context , i){ // متغيرين التكرار
          return Container(
            // margin: EdgeInsets.all(10),
            color: Colors.green,
            child: ListTile(
           // اضافة وتجربة
              onTap: (){
                setState(() {

              showDialog(context: context, builder: (context){
              return AlertDialog(
              title: Text("النقاط : 10",textDirection: TextDirection.rtl,textAlign: TextAlign.right,),
              // title: Icon(Icons.arrow_downward_rounded,color: Colors.white,),
              content: ElevatedButton(
                onPressed: () { print(i); },
                child: Text("إضافة نقاط"),

              ),
              backgroundColor: Colors.black,
              titleTextStyle: TextStyle(color: Colors.white,fontSize: 30), // اذا كان في خط بتتحكم فيه ممكن من هون هي للعنوان
              contentTextStyle: TextStyle(color: Colors.white,fontSize: 20), // ايضا تحكم بخواص محتوى النص
              titlePadding: EdgeInsets.all(20), // حواف العنوان
              contentPadding: EdgeInsets.all(20), // حواف النص الداخلي
              // الحداث التي تنعرض بداخل الزر
              actions: [

              FlatButton(onPressed: (){print("حسنا");}, child: Text("حسناً")),
              FlatButton(onPressed: (){
              Navigator.of(context).pop(); // مو مهم حاليا نفهمه ولكن هاد بلغي ال Alin عند الضغط
              print("إغلاق");}, child: Text("إغلاق"))
              ],

              );

              });

                });
                },

              // انتهى اضافة
              title:Text("${student[i]["الاسم"]}",style: TextStyle(fontSize: 30),),
              trailing:Text("${student[i]["الحفظ"]}"),
              subtitle:Text("${student[i]["الصف"]}"),
            ),
          );
        })



